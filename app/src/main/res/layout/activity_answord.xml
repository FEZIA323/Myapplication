<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_marginRight="3dp"
    android:background="@drawable/wither_bag">
    <RelativeLayout
        android:id="@+id/titleBarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_StatusBarHeightView"
        android:background="@color/white"
        android:visibility="visible">
        <include layout="@layout/title_layout"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/an1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/icon"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp"
            android:paddingBottom="5dp"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:textIsSelectable="true">
            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI对话"
                android:textSize="15dp"
                android:textColor="#00bfff"></TextView>
            <TextView
                android:id="@+id/text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对话介绍：我是知心姐姐，我擅长倾听大家的苦恼，帮助大家解决问题，如果你有心事，可以找我聊聊。"
                android:textSize="13dp"></TextView>
        </LinearLayout>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/message_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:nestedScrollingEnabled="false"
        />
    <LinearLayout
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:paddingLeft="3dp"
        android:paddingRight="1dp">

        <EditText
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:background="@drawable/wither_bag3"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:maxLines="3"
            android:textSize="13dp"
            android:gravity="top|start"
            android:scrollbars="vertical"/>


        <TextView
            android:id="@+id/send"
            android:layout_width="88dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:background="@drawable/corner_fill_blue_1_ripple"
            android:text="发送"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>